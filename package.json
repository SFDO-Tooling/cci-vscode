{
    "name": "cci",
    "displayName": "CumulusCI",
    "description": "CumulusCI extension for Visual Studio Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:cciOrgView",
        "onView:cciFlowView"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cci-explorer",
                    "title": "CumulusCI Explorer",
                    "icon": "media/images/dep.svg"
                }
            ]
        },
        "views": {
            "cci-explorer": [
                {
                    "id": "cciOrgView",
                    "name": "Orgs"
                },
                {
                    "id": "cciFlowView",
                    "name": "Flows"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "group": "navigation",
                    "when": "view == cciOrgView",
                    "command": "cci.refreshOrgs"
                },
                {
                    "group": "navigation",
                    "when": "view == cciFlowView",
                    "command": "cci.refreshFlows"
                }
            ],
            "view/item/context": [
                {
                    "group": "inline",
                    "command": "cci.orgOperations",
                    "when": "view == cciOrgView && viewItem == org"
                },
                {
                    "group": "inline",
                    "command": "cci.runFlow",
                    "when": "view == cciFlowView && viewItem == flow"
                }
            ]
        },
        "commands": [
            {
                "command": "cci.refreshOrgs",
                "title": "Refresh Orgs",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "cci.refreshFlows",
                "title": "Refresh Flows",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "cci.orgOperations",
                "title": "Perform an Operation",
                "icon": {
                    "light": "resources/light/run.svg",
                    "dark": "resources/dark/run.svg"
                }
            },
            {
                "command": "cci.runFlow",
                "title": "Run Flow",
                "icon": {
                    "light": "resources/light/run.svg",
                    "dark": "resources/dark/run.svg"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.49.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "await-exec": "^0.1.2"
    }
}
